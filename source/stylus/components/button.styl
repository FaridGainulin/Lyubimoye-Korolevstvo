.btn
  height: 43px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #222222
  border-radius: 95px
  // border: 3px solid #fff;
  text-transform: uppercase
  box-shadow: 0 23px 81px 0 rgba(253, 204, 78, 0.4), 0 3px 0 0 #ffca69;
  background: radial-gradient(68.57% 68.57% at 50% 25.83%, rgb(255, 232, 152) 0%, rgb(236, 170, 0) 100%);
  font-family: 'Manrope-Bold'
  font-weight: 800
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 15px;
    height: 48px;
  +above($breakpoints.md)
    height: 53px;
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 58px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

